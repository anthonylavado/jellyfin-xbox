<UserControl
    x:Class="Jellyfin.UserControls.LoadingUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Visibility="Collapsed">
    <Grid Height="400" Width="650" Background="#B0000000" CornerRadius="5" Padding="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Loading..." FontSize="{StaticResource FontL}" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        
        <ProgressRing Grid.Row="1" IsActive="true" Height="80" Width="80" Foreground="{StaticResource PrimaryColor}"></ProgressRing>
    </Grid>
</UserControl>
