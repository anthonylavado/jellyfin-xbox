<Page
    x:Class="Jellyfin.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControls="using:Jellyfin.UserControls"
    DataContext="{Binding MainPage, Source={StaticResource ViewModelLocator}}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <userControls:MenuUserControl Grid.Column="0" />
        
        <userControls:MovieListUserControl Grid.Column="1" />

        <!--<userControls:TvShowListUserControl Grid.Column="1"
            Visibility="{Binding IsTvShowsPanelDisplayed, Converter={StaticResource ParametrizedBooleanToVisibilityConverter}, ConverterParameter=true}"/>-->
    </Grid>
</Page>
